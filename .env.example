PORT=3000
NODE_ENV=development

# Database Configuration
# Update this URL after installing PostgreSQL
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/moodnote_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
REFRESH_TOKEN_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=MoodNote <noreply@moodnote.com>

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Token Expiration (in milliseconds)
EMAIL_VERIFICATION_EXPIRY=86400000  # 24 hours
PASSWORD_RESET_EXPIRY=3600000       # 1 hour
SESSION_TIMEOUT=1800000             # 30 minutes

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000             # 15 minutes
RATE_LIMIT_WINDOW=60000             # 1 minute
RATE_LIMIT_MAX_REQUESTS=100
